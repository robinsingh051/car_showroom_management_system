<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update Test Ride</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/register.css" type="text/css" />
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container-fluid bg">
      <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12"></div>
        <div class="col-md-4 col-sm-4 col-xs-12">
          <form
            class="form-container"
            action="/customer/rides/update/<%= rows[0].tid %> "
            method="post"
          >
            <h2 style="text-align: center">Enter Test Ride Details</h2>

            <div class="mb-3">
              <label for="modelid" class="form-label">Car Model</label>
              <input
                type="text"
                class="form-control"
                placeholder="Car Model Name"
                id="modelid"
                name="model"
                value="<%= rows[0].model %>"
                readonly
              />
            </div>

            <div class="mb-3">
              <label for="cnameid" class="form-label">Customer Name</label>
              <input
                type="text"
                class="form-control"
                id="cnameid"
                placeholder=""
                name="cname"
                value="<%= rows[0].cname %>"
                readonly
              />
            </div>

            <% let date = new Date()%> <%let day =
            String(date.getDate()+1).padStart(2, "0");%> <%let month =
            String(date.getMonth()+1).padStart(2, "0");%> <%let year =
            date.getFullYear();%> <%let cur_date = `${year}-${month}-${day}`;%>
            <%day = String(date.getDate()).padStart(2, "0");%> <%month =
            String(date.getMonth()+3).padStart(2, "0");%> <%year =
            date.getFullYear();%> <%let max_date = `${year}-${month}-${day}`;%>

            <div class="mb-3">
              <label for="start" class="form-label">Date</label>

              <input
                class="form-control"
                type="date"
                id="start"
                name="ride_date"
                value="<%= rows[0].ride_date %>"
                min="<%= cur_date %>"
                max="<%= max_date %>"
              />
            </div>

            <div class="mb-4">
              <label for="select" class="form-label">Time Slot</label>
              <select
                class="form-select"
                id="select"
                aria-label="Default select example"
                name="time_slot"
                value=""
              >
                <option value="<%= rows[0].time_slot %>">
                  <%= rows[0].time_slot %>
                </option>
                <option value="09:00 AM">09:00 AM</option>
                <option value="11:00 AM">11:00 AM</option>
                <option value="01:00 PM">01:00 PM</option>
                <option value="03:00 PM">03:00 PM</option>
                <option value="05:00 PM">05:00 PM</option>
              </select>
            </div>

            <div class="mb-2">
              <button type="submit" class="btn btn-success btn-block">
                Book Ride
              </button>
            </div>

            <h6 style="text-align: center">
              Don't want to book test ride? <a href="/customer">Go Back</a>
            </h6>
          </form>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-12"></div>
      </div>
    </div>
  </body>
</html>
